@model IEnumerable<ProductViewModel>

<h2>Search Results</h2>

<p>Showing results for: @ViewBag.SearchTerm</p>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <!-- Add more columns as needed -->
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <!-- Add more columns as needed -->
            </tr>
        }
    </tbody>
</table>
