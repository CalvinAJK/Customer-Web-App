@model IEnumerable<ProductViewModel>

<h2>Product List</h2>

<form method="get" action="@Url.Action("Search", "Products")">
    <div class="input-group mb-3">
        <input type="text" class="form-control" name="searchTerm" placeholder="Search by name or description">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">Search</button>
        </div>
    </div>
</form>

<table id="myTable" class="table">
    <thead>
        <tr>
            <th class="pointer" onclick="sortTable(0)">
            Name
            </th>
            
            <th class="pointer" onclick="sortTable(1)">
                Description
            </th>

            <th class="pointer" onclick="sortTable(2)">
            Price
            </th>
            @if (User.Identity.IsAuthenticated)
            {
                <th class="pointer" onclick="sortTable(3)">
                    InStock
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                @if (User.Identity.IsAuthenticated)
                {
                    <td>@product.InStock</td>
                }
            </tr>
        }
    </tbody>
</table>
